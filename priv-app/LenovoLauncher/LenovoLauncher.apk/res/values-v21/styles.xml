<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="WorkspaceIcon">
        <item name="android:textColor">@color/workspace_icon_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="Theme.LeLauncher.LoadProgressDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="OneActionbar" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@drawable/appbg_sunny0</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorButtonNormal">#fffafafa</item>
        <item name="android:colorControlHighlight">#ffc0c0c0</item>
    </style>
    <style name="OneActionbar2" parent="@style/AppBaseTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:colorButtonNormal">#fffafafa</item>
        <item name="android:colorControlHighlight">#ffc0c0c0</item>
    </style>
    <style name="AlertTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item>
    </style>
    <style name="weathercheckstyle" parent="@android:style/Widget.CompoundButton.CheckBox" />
    <style name="Theme" parent="@android:style/Theme.DeviceDefault.Wallpaper.NoTitleBar">
        <item name="android:dialogTheme">@style/Theme.LeLauncher.Dialog.Shortcut</item>
        <item name="android:alertDialogTheme">@style/Theme.LeLauncher.Dialog.Shortcut</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorControlHighlight">@color/lollipop_gray</item>
    </style>
    <style name="mycheckstyle" parent="@android:style/Widget.CompoundButton.CheckBox" />
    <style name="Theme.LeLauncher.Dialog.Shortcut" parent="@android:style/Theme.DeviceDefault.Light.Dialog" />
    <style name="FirstAlertTheme" parent="@style/AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <style name="AndroidLTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="BorderlessButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/background21</item>
    </style>
</resources>
