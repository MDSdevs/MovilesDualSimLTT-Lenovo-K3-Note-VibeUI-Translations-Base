<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupTitleText">
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textColor">@color/popup_title_color</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ViewfinderLabelLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">13.0dip</item>
        <item name="android:layout_marginTop">13.0dip</item>
        <item name="android:layout_marginRight">13.0dip</item>
        <item name="android:layout_marginBottom">@dimen/indicator_bar_width</item>
    </style>
    <style name="SettingPopupWindow">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="ReviewControlIcon">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_pressed</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/switcher_size</item>
        <item name="android:layout_height">@dimen/switcher_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="PanoViewHorizontalBar">
        <item name="android:background">#ff000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:alpha">1.0</item>
    </style>
    <style name="SettingPopupWindow_xlarge">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/setting_popup_right_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="IndicatorUp">
        <item name="android:layout_marginTop">@dimen/pano_indicator_margin_long</item>
    </style>
    <style name="IndicatorBottom">
        <item name="android:layout_marginBottom">@dimen/pano_indicator_margin_long</item>
    </style>
    <style name="IndicatorLeft">
        <item name="android:layout_marginLeft">@dimen/pano_indicator_margin_short</item>
    </style>
    <style name="IndicatorRight">
        <item name="android:layout_marginRight">@dimen/pano_indicator_margin_short</item>
    </style>
    <style name="ShutterGroup">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>
    <style name="ShutterButtonSeperator">
        <item name="android:background">@drawable/ic_shutter_seperator</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">@dimen/shutter_sperator</item>
        <item name="android:layout_height">@dimen/shutter_size</item>
    </style>
</resources>
